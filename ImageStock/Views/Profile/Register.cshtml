@using ImageStock.Data.Models.Views
@model RegisterFormData
@{ViewData["Title"] = "Реєстрація"; }

<link href="~/styles/register.css" rel="stylesheet" />
<link href="~/styles/forms.css" rel="stylesheet" />
<link href="~/styles/util.css" rel="stylesheet" />
<link href="~/styles/bootstrap.css" rel="stylesheet"/>
<script src="~/scripts/upload.js"></script>
<script src="~/scripts/register.js"></script>

<div class="formBody col-md-6 position-absolute">
    <h3 class="formCaption">Реєстрація</h3>
    <form class="px-5 py-2" asp-action="Register" asp-controller="Profile" asp-antiforgery="true" enctype="multipart/form-data">
        <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="flexbox-h">
            <div id="userDetails" class="mr-5 flex-vertical-center flex-column">
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" placeholder="Ім'я користувача" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" placeholder="Пароль" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Пароль" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group flex-vertical-center flex-column" id="userAvatar">
                <label asp-for="AvatarImg"></label>
                <input asp-for="AvatarImg" onchange="updateAvatarData(this, '#avatarPreview', '#avatarFileName');"/>
                <img id="avatarPreview" src="/img/def-avatar.png" alt="Некоректне зображення" onclick="$('#AvatarImg').click();"/>
                <p id="avatarFileName" class="ml-auto mt-2 mr-2">Немає файлу</p>
                <span asp-validation-for="AvatarImg" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="mainButton mt-2" value="Зареєструватися" />
        </div>
    </form>
</div>