@using ImageStock.Data.Models
@model UserProfile
@{ViewBag.Title = "Помилка реєстрації";}

<style>
    #infoContent {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border: dashed;
        width: fit-content;
        height: fit-content;
        min-width: 600px;
        min-height: 100px;
        font-family: 'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif;
        background-color: #fbde60;
        color: #e76b2b;
    }

    #loginLink {
        padding: 2px 10px;
        border: solid;
        color: #57a7ff;
        border-radius: 5%;
    }

        #loginLink:hover {
            background-color: #57a7ff;
            border-color: #57a7ff;
            color: #ffffff;
            text-decoration: none;
        }

    #msg1, #msg2 {
        font-weight: normal;
        margin-left: 3%;
    }
</style>

<div id="infoContent" class="d-flex flex-column justify-content-center p-5">
    <h1>Помилка</h1>
    <h3 id="msg1" class="my-3">Не вдалося зареєструватися.</h3>
    <h3 id="msg2" class="my-1"><a id="loginLink" href="@Url.Action("register", "profile")">Повторити спробу</a></h3>
</div>