@using ImageStock.Data.Models;
@using ImageStock.Data.Interfaces;
@model IGallery;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Галерея</title>
    <link rel="stylesheet" type="text/css" href="~/styles/main.css" />
    <link rel="stylesheet" type="text/css" href="~/styles/gallery.css" />
</head>
<body>
    <div id="header">
        <div id="menu">
            <a class="menu_item" href="home">Головна</a>
            <a class="menu_item" href="gallery">Галерея</a>
            <a class="menu_item" href="upload">Завантажити</a>
        </div>
    </div>
    <div id="mainBody">
        <div id="postsGrid">
            @{
                foreach (Post post in Model.Posts)
                {
                    <div class="postPreview">
                        <img class="postPreviewImg" src="@post.ImgUrl" />
                        <div class="postPreviewInfo">
                            <div class="postPreviewInfoContent">
                                <div class="postTitle">@post.Title</div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
    <div id="footer">copyright © 2020</div>
</body>
</html>